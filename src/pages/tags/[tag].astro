---
import Base from '@layouts/Base.astro';
import CategoryIcon from '@components/icons/CategoryIcon.astro';
import { getTaxonomy } from '@utils/getAllTags';
import { getSinglePage } from '@utils/getAllTags';
import { taxonomyFilter } from '@utils/getAllTags';
import { deslugify } from '@utils/slug';
import config from '@config/config.json';

export async function getStaticPaths() {
  const tags = await getTaxonomy('blog', 'tags');

  return tags.map((tag) => {
    return {
      params: { tag: tag.slug },
    };
  });
}

const { tag } = Astro.params;
const posts = await getSinglePage('blog');
const filterByTags = taxonomyFilter(posts, 'tags', tag);
const { site } = config;
---

<Base 
  meta_title={`${deslugify(tag)} - Blog Tags | LivingSmartUK`}
  meta_description={`Explore all articles tagged with ${deslugify(tag)} on the LivingSmartUK blog. Find smart home tips, guides, and IoT solutions.`}
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Header Section -->
    <div class="mb-10 text-center">
      <h1 class="mb-4 text-3xl font-bold md:text-4xl text-gray-800 dark:text-white">
        Smart Home Topics: <span class="text-blue-600 dark:text-blue-400">{deslugify(tag)}</span>
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Browse all our articles related to <strong>{deslugify(tag)}</strong> for smart home automation, 
        IoT solutions, and intelligent living advice.
      </p>
      <div class="mt-6">
        <a 
          href="/blog" 
          class="inline-flex items-center text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to All Articles
        </a>
      </div>
    </div>

    <!-- Articles List -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 md:p-8">
      <div class="mb-6 flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-white">
          <span class="text-blue-600 dark:text-blue-400">{filterByTags?.length || 0}</span> Articles Found
        </h2>
        <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-sm font-medium rounded-full">
          {deslugify(tag)}
        </span>
      </div>

      {filterByTags?.length > 0 ? (
        <div class="space-y-6">
          {filterByTags.map((post) => (
            <article class="group border-b border-gray-100 dark:border-gray-700 pb-6 last:border-0">
              <div class="flex flex-col md:flex-row md:items-start">
                <!-- Post Meta -->
                <div class="md:w-1/4 mb-4 md:mb-0">
                  <time class="text-sm text-gray-500 dark:text-gray-400 block mb-2">
                    {new Date(post.data.date || post.data.pubDate).toLocaleDateString('en-GB', {
                      day: 'numeric',
                      month: 'long',
                      year: 'numeric'
                    })}
                  </time>
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags?.slice(0, 3).map((tag) => (
                      <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs rounded">
                        {deslugify(tag)}
                      </span>
                    ))}
                  </div>
                </div>

                <!-- Post Content -->
                <div class="md:w-3/4">
                  <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0 mt-1">
                      <CategoryIcon class="w-5 h-5 text-blue-500 dark:text-blue-400" />
                    </div>
                    <div>
                      <h3 class="mb-2">
                        <a 
                          href={`/blog/${post.slug}`} 
                          class="text-xl font-semibold text-gray-800 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                        >
                          {post.data.title}
                        </a>
                      </h3>
                      <p class="text-gray-600 dark:text-gray-300 mb-3 line-clamp-2">
                        {post.data.description || post.data.excerpt || 'Read this article about smart home solutions...'}
                      </p>
                      <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                          <a 
                            href={`/blog/${post.slug}`} 
                            class="inline-flex items-center text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 text-sm font-medium"
                          >
                            Read Article
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                            </svg>
                          </a>
                          {post.data.readingTime && (
                            <span class="text-sm text-gray-500 dark:text-gray-400">
                              {post.data.readingTime} min read
                            </span>
                          )}
                        </div>
                        {post.data.author && (
                          <span class="text-sm text-gray-500 dark:text-gray-400">
                            By {post.data.author}
                          </span>
                        )}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <!-- No Articles Found -->
        <div class="text-center py-12">
          <div class="mb-6">
            <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2">
            No articles found for "{deslugify(tag)}"
          </h3>
          <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-md mx-auto">
            We don't have any articles tagged with <strong>{deslugify(tag)}</strong> yet. 
            Check back soon or explore our other smart home topics.
          </p>
          <div class="space-x-4">
            <a 
              href="/blog" 
              class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors"
            >
              Browse All Articles
            </a>
            <a 
              href="/tags" 
              class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-medium rounded-lg transition-colors"
            >
              View All Tags
            </a>
          </div>
        </div>
      )}

      <!-- Newsletter CTA -->
      {filterByTags?.length > 0 && (
        <div class="mt-12 pt-8 border-t border-gray-100 dark:border-gray-700">
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-900 rounded-xl p-6 md:p-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between">
              <div class="md:w-2/3 mb-6 md:mb-0">
                <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">
                  Want More Smart Home Insights?
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                  Subscribe to our newsletter for the latest tips, tutorials, and smart home trends 
                  delivered to your inbox.
                </p>
              </div>
              <div class="md:w-1/3">
                <a 
                  href="https://www.linkedin.com/build-relation/newsletter-follow?entityUrn=7365469390676410368"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center w-full px-6 py-3 bg-[#0A66C2] hover:bg-[#004182] text-white font-medium rounded-lg transition-colors"
                >
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"/>
                  </svg>
                  Follow on LinkedIn
                </a>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 text-center">
                  Get updates on {deslugify(tag)} and other smart home topics
                </p>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</Base>