---
import Base from '@layouts/Base.astro';
import Page from '@layouts/Page.astro';
import ContactForm from '@components/ContactForm.astro';
---

<Base meta_title="Contact LivingSmartUK - Smart Home Solutions">
  <Page title="Contact LivingSmartUK">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Ready to transform your home with intelligent automation? Get in touch with our UK-based team 
          for consultations, quotes, or technical support.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div>
          <div class="bg-gray-50 rounded-2xl p-8 h-full">
            <h2 class="text-2xl font-bold mb-8">Get in Touch</h2>
            
            <div class="space-y-8">
              <!-- Contact Details -->
              <div class="space-y-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-semibold">Phone Support</h3>
                    <p class="text-gray-600 mt-1">Mon-Fri: 9:00 AM - 6:00 PM GMT</p>
                    <a href="tel:+441234567890" class="text-blue-600 hover:text-blue-800 font-medium text-lg">
                      +44 (0) 1234 567890
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-semibold">Email</h3>
                    <p class="text-gray-600 mt-1">General inquiries & support</p>
                    <a href="mailto:hello@livingsmart.uk" class="text-blue-600 hover:text-blue-800 font-medium">
                      hello@livingsmart.uk
                    </a>
                    <p class="text-gray-600 mt-2">Business & partnerships</p>
                    <a href="mailto:partners@livingsmart.uk" class="text-blue-600 hover:text-blue-800 font-medium">
                      partners@livingsmart.uk
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-semibold">Office Location</h3>
                    <p class="text-gray-600 mt-1">Based in the United Kingdom</p>
                    <p class="font-medium">
                      LivingSmartUK Headquarters<br>
                      Tech Innovation Centre<br>
                      London, United Kingdom
                    </p>
                    <p class="text-gray-600 mt-2">
                      <em>By appointment only</em>
                    </p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-semibold">Business Hours</h3>
                    <div class="space-y-1 mt-1">
                      <p class="text-gray-600"><span class="font-medium">Monday-Friday:</span> 9:00 AM - 6:00 PM GMT</p>
                      <p class="text-gray-600"><span class="font-medium">Saturday:</span> 10:00 AM - 4:00 PM GMT</p>
                      <p class="text-gray-600"><span class="font-medium">Sunday:</span> Emergency support only</p>
                      <p class="text-sm text-gray-500 mt-2">24/7 emergency support available for existing clients</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Social Media -->
              <div>
                <h3 class="text-lg font-semibold mb-4">Connect With Us</h3>
                <div class="flex space-x-4">
                  <!-- WhatsApp -->
                  <a href="https://whatsapp.com/channel/0029VbBxxIp4inosPzdJNl1O" class="text-gray-400 hover:text-green-500 transition" aria-label="WhatsApp">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.149-.67.15-.197.298-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.521.149-.173.198-.298.298-.497.099-.198.05-.371-.025-.521-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 0 1-5.031-1.378l-.361-.214-3.76.982.998-3.675-.236-.374a9.86 9.86 0 0 1-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 0 1 2.9 6.994c-.004 5.45-4.438 9.88-9.888 9.88m8.413-18.297A11.815 11.815 0 0 0 12.05 0C5.495 0 .16 5.333.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 0 0 5.683 1.448h.005c6.554 0 11.89-5.333 11.893-11.893 0-3.18-1.24-6.162-3.495-8.411"/>
                    </svg>
                  </a>
                  
                  <!-- LinkedIn Profile -->
                  <a href="https://www.linkedin.com/in/armstrong-uzoagwa" class="text-gray-400 hover:text-blue-700 transition" aria-label="LinkedIn">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 448 512">
                      <path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"/>
                    </svg>
                  </a>
                  
                  <!-- YouTube -->
                  <a href="https://www.youtube.com/@LivingSmartUK" class="text-gray-400 hover:text-red-600 transition" aria-label="YouTube">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                    </svg>
                  </a>
                  
                  <!-- LinkedIn Newsletter Subscription Button -->
                  <a
                    href="https://www.linkedin.com/build-relation/newsletter-follow?entityUrn=7365469390676410368"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center px-4 py-2 bg-[#0A66C2] text-white font-medium rounded-md hover:bg-[#004182] transition-colors"
                    aria-label="Follow our LinkedIn Newsletter"
                  >
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"/>
                    </svg>
                    Follow Newsletter
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
            <ContactForm />
            
            <!-- Additional Information -->
            <div class="mt-8 pt-8 border-t border-gray-200">
              <h3 class="text-lg font-semibold mb-3">What to Expect</h3>
              <ul class="space-y-2 text-gray-600">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Response within 24 hours on business days</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Free initial consultation for new projects</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>No obligation quotes with transparent pricing</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>UK-based support team with smart home expertise</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Service Areas -->
      <div class="mt-16">
        <h2 class="text-2xl font-bold text-center mb-8">Service Areas Across the UK</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="bg-blue-50 p-4 rounded-lg text-center">
            <h4 class="font-semibold">London & Southeast</h4>
            <p class="text-sm text-gray-600">Full coverage</p>
          </div>
          <div class="bg-blue-50 p-4 rounded-lg text-center">
            <h4 class="font-semibold">Midlands</h4>
            <p class="text-sm text-gray-600">Birmingham, Nottingham, Leicester</p>
          </div>
          <div class="bg-blue-50 p-4 rounded-lg text-center">
            <h4 class="font-semibold">North England</h4>
            <p class="text-sm text-gray-600">Manchester, Leeds, Liverpool</p>
          </div>
          <div class="bg-blue-50 p-4 rounded-lg text-center">
            <h4 class="font-semibold">Remote Support</h4>
            <p class="text-sm text-gray-600">Nationwide via remote assistance</p>
          </div>
        </div>
      </div>
    </div>
  </Page>
</Base>