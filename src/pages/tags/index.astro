---
import Base from '@layouts/Base.astro';
import { getTaxonomy } from '@utils/getAllTags';
import config from '@config/config.json';

const tags = await getTaxonomy('blog', 'tags');

// Sort tags alphabetically
const sortedTags = [...tags].sort((a, b) => a.name.localeCompare(b.name));

// LivingSmartUK brand colors - professional and consistent
const tagColors = [
  'bg-blue-100 text-blue-800 hover:bg-blue-200 dark:bg-blue-900 dark:text-blue-200 dark:hover:bg-blue-800',
  'bg-emerald-100 text-emerald-800 hover:bg-emerald-200 dark:bg-emerald-900 dark:text-emerald-200 dark:hover:bg-emerald-800',
  'bg-indigo-100 text-indigo-800 hover:bg-indigo-200 dark:bg-indigo-900 dark:text-indigo-200 dark:hover:bg-indigo-800',
  'bg-cyan-100 text-cyan-800 hover:bg-cyan-200 dark:bg-cyan-900 dark:text-cyan-200 dark:hover:bg-cyan-800',
  'bg-violet-100 text-violet-800 hover:bg-violet-200 dark:bg-violet-900 dark:text-violet-200 dark:hover:bg-violet-800',
  'bg-teal-100 text-teal-800 hover:bg-teal-200 dark:bg-teal-900 dark:text-teal-200 dark:hover:bg-teal-800',
  'bg-sky-100 text-sky-800 hover:bg-sky-200 dark:bg-sky-900 dark:text-sky-200 dark:hover:bg-sky-800',
  'bg-amber-100 text-amber-800 hover:bg-amber-200 dark:bg-amber-900 dark:text-amber-200 dark:hover:bg-amber-800',
];

const getTagColor = (index: number): string => {
  return tagColors[index % tagColors.length];
};
---

<Base 
  meta_title="Blog Tags | LivingSmartUK Smart Home Topics"
  meta_description="Browse all smart home topics and tags on the LivingSmartUK blog. Find IoT solutions, home automation guides, and intelligent living advice."
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="mb-4 text-3xl font-bold md:text-4xl text-gray-800 dark:text-white">
        Smart Home Topics & Categories
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Explore our collection of smart home topics. Click any tag to browse related articles about 
        IoT solutions, home automation, energy efficiency, and intelligent living.
      </p>
      <div class="mt-6 flex items-center justify-center space-x-4">
        <a 
          href="/blog" 
          class="inline-flex items-center text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          View All Articles
        </a>
        <span class="text-gray-400">•</span>
        <div class="text-gray-500 dark:text-gray-400">
          <span class="font-semibold text-blue-600 dark:text-blue-400">{sortedTags.length}</span> Topics Available
        </div>
      </div>
    </div>

    <!-- Tags Grid -->
    <div class="mb-12">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {sortedTags.map((tag, index) => (
          <a
            href={`/tags/${tag.slug}`}
            class={`block p-6 rounded-xl border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:scale-105 hover:shadow-lg ${getTagColor(index)}`}
            title={`Browse ${tag.name} articles`}
          >
            <div class="flex items-start justify-between mb-3">
              <div>
                <span class="text-2xl font-bold mb-1 block">{tag.name}</span>
                <div class="flex items-center text-sm opacity-75">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <span>Smart Home Topic</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <div class="w-10 h-10 rounded-full bg-white/20 dark:bg-black/20 flex items-center justify-center">
                  <span class="font-bold">{index + 1}</span>
                </div>
              </div>
            </div>
            <div class="pt-4 border-t border-gray-300/30 dark:border-gray-600/30">
              <p class="text-sm opacity-90">
                Click to explore articles about {tag.name} and related smart home solutions.
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Popular Topics Section -->
    <div class="mb-12">
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6 text-center">
          Most Popular Smart Home Topics
        </h2>
        <div class="flex flex-wrap justify-center gap-4">
          {sortedTags.slice(0, 8).map((tag, index) => (
            <a
              href={`/tags/${tag.slug}`}
              class={`px-6 py-3 rounded-full font-medium transition-all hover:scale-110 ${getTagColor(index)}`}
              title={`Popular topic: ${tag.name}`}
            >
              <span class="font-semibold">{tag.name}</span>
              <span class="ml-2 text-xs opacity-75">→</span>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Newsletter CTA -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl p-8 md:p-10 text-white">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">
          Stay Updated with Smart Home Trends
        </h2>
        <p class="text-blue-100 mb-8 text-lg">
          Subscribe to our newsletter for the latest insights on IoT, home automation, 
          energy efficiency, and intelligent living solutions.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href="https://www.linkedin.com/build-relation/newsletter-follow?entityUrn=7365469390676410368"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-white text-blue-600 hover:bg-blue-50 font-bold rounded-lg transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"/>
            </svg>
            Follow Our LinkedIn Newsletter
          </a>
          <a
            href="/blog"
            class="inline-flex items-center px-6 py-3 bg-white/10 hover:bg-white/20 text-white font-medium rounded-lg transition-colors border border-white/20"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            Browse Latest Articles
          </a>
        </div>
        <p class="text-blue-200 text-sm mt-6">
          Get expert insights on {sortedTags.slice(0, 3).map(t => t.name).join(', ')} and more
        </p>
      </div>
    </div>

    <!-- Stats & Information -->
    <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl text-center">
        <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">
          {sortedTags.length}
        </div>
        <h3 class="font-semibold text-gray-800 dark:text-white mb-1">Topics Covered</h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          Comprehensive smart home categories
        </p>
      </div>
      <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl text-center">
        <div class="text-3xl font-bold text-emerald-600 dark:text-emerald-400 mb-2">
          UK Focus
        </div>
        <h3 class="font-semibold text-gray-800 dark:text-white mb-1">Local Expertise</h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          Solutions for UK homes & regulations
        </p>
      </div>
      <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl text-center">
        <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400 mb-2">
          Always Updated
        </div>
        <h3 class="font-semibold text-gray-800 dark:text-white mb-1">Latest Trends</h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          New IoT & automation content regularly
        </p>
      </div>
    </div>
  </div>
</Base>