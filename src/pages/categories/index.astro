---
import Base from '@layouts/Base.astro';
import CategoryIcon from '@icons/CategoryIcon.astro';
import { getTaxonomy } from '@utils/getAllTags';
import config from '@config/config.json';

const allCategories = await getTaxonomy('blog', 'categories');
const uniqueCategories = [...new Set(allCategories.map((item) => item.slug))].map((slug) =>
  allCategories.find((cat) => cat.slug === slug)
);

// Sort categories alphabetically
const sortedCategories = [...uniqueCategories].sort((a, b) => {
  if (!a || !b) return 0;
  return a.name.localeCompare(b.name);
});

// LivingSmartUK category colors and icons
const categoryConfig = {
  'home-automation': {
    color: 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200',
    iconColor: 'text-blue-600 dark:text-blue-400',
    description: 'Smart control systems for lighting, climate, and entertainment'
  },
  'iot-solutions': {
    color: 'bg-emerald-100 text-emerald-800 dark:bg-emerald-900 dark:text-emerald-200',
    iconColor: 'text-emerald-600 dark:text-emerald-400',
    description: 'Internet of Things devices and interconnected systems'
  },
  'energy-efficiency': {
    color: 'bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-200',
    iconColor: 'text-amber-600 dark:text-amber-400',
    description: 'Smart energy management and cost-saving solutions'
  },
  'smart-security': {
    color: 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200',
    iconColor: 'text-red-600 dark:text-red-400',
    description: 'Advanced security systems and monitoring'
  },
  'uk-smart-homes': {
    color: 'bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200',
    iconColor: 'text-indigo-600 dark:text-indigo-400',
    description: 'UK-specific smart home solutions and regulations'
  },
  'smart-lighting': {
    color: 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200',
    iconColor: 'text-purple-600 dark:text-purple-400',
    description: 'Intelligent lighting control and automation'
  },
  'voice-control': {
    color: 'bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-200',
    iconColor: 'text-cyan-600 dark:text-cyan-400',
    description: 'Voice-activated home automation systems'
  },
  'diy-smart-home': {
    color: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
    iconColor: 'text-green-600 dark:text-green-600',
    description: 'Do-it-yourself smart home installations'
  }
};

const getCategoryConfig = (slug) => {
  return categoryConfig[slug] || {
    color: 'bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-200',
    iconColor: 'text-gray-600 dark:text-gray-400',
    description: 'Smart home solutions and intelligent living'
  };
};
---

<Base 
  meta_title="Smart Home Categories | LivingSmartUK Blog"
  meta_description="Browse all smart home categories on LivingSmartUK. Find expert guides on home automation, IoT solutions, energy efficiency, security, and UK smart homes."
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="mb-4 text-3xl font-bold md:text-4xl text-gray-800 dark:text-white">
        Smart Home Categories
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-6">
        Explore our comprehensive collection of smart home topics. Each category contains expert guides, 
        tutorials, and insights tailored for UK homeowners and tech enthusiasts.
      </p>
      <div class="flex items-center justify-center space-x-4 text-sm">
        <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full">
          {sortedCategories.filter(Boolean).length} Categories
        </span>
        <span class="text-gray-500">•</span>
        <a href="/blog" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-medium">
          Browse All Articles
        </a>
        <span class="text-gray-500">•</span>
        <a href="/tags" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-medium">
          View All Tags
        </a>
      </div>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {sortedCategories.filter(Boolean).map((category) => {
        const config = getCategoryConfig(category.slug);
        return (
          <a
            href={`/categories/${category.slug}`}
            class={`group block p-6 rounded-xl border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:scale-105 hover:shadow-lg ${config.color}`}
            title={`Browse ${category.name} articles`}
          >
            <div class="flex items-start mb-4">
              <div class="flex-shrink-0 mr-4">
                <CategoryIcon class={`w-8 h-8 ${config.iconColor}`} />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold mb-2">{category.name}</h3>
                <p class="text-sm opacity-90">
                  {config.description}
                </p>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 opacity-50 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </div>
            </div>
            
            <div class="pt-4 border-t border-gray-300/30 dark:border-gray-600/30">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium">Explore Category</span>
                <span class="px-2 py-1 bg-white/50 dark:bg-black/30 text-xs font-medium rounded">
                  Smart Home
                </span>
              </div>
            </div>
          </a>
        );
      })}
    </div>

    <!-- Featured Categories -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6 text-center">
        Most Popular Smart Home Topics
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {sortedCategories.filter(Boolean).slice(0, 4).map((category) => {
          const config = getCategoryConfig(category.slug);
          return (
            <a
              href={`/categories/${category.slug}`}
              class={`p-4 rounded-lg text-center transition-all hover:scale-105 ${config.color}`}
            >
              <CategoryIcon class={`w-6 h-6 mx-auto mb-2 ${config.iconColor}`} />
              <span class="font-semibold block">{category.name}</span>
            </a>
          );
        })}
      </div>
    </div>

    <!-- How to Use Categories -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8 mb-12">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6 text-center">
        How to Navigate Our Smart Home Content
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center p-4">
          <div class="w-12 h-12 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-800 dark:text-white mb-2">Browse by Topic</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Select a category that matches your interest or project type
          </p>
        </div>
        <div class="text-center p-4">
          <div class="w-12 h-12 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-800 dark:text-white mb-2">Find Solutions</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Discover articles with practical guidance and expert advice
          </p>
        </div>
        <div class="text-center p-4">
          <div class="w-12 h-12 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-bold text-gray-800 dark:text-white mb-2">Implement & Learn</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Follow step-by-step guides to implement smart home solutions
          </p>
        </div>
      </div>
    </div>

    <!-- Newsletter CTA -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl p-8 md:p-10 text-white">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">
          Master Smart Home Technology
        </h2>
        <p class="text-blue-100 mb-8 text-lg">
          Subscribe to our LinkedIn newsletter for expert insights on home automation, 
          IoT solutions, energy efficiency, and UK smart home regulations.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href="https://www.linkedin.com/build-relation/newsletter-follow?entityUrn=7365469390676410368"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-white text-blue-600 hover:bg-blue-50 font-bold rounded-lg transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"/>
            </svg>
            Follow Our LinkedIn Newsletter
          </a>
          <a
            href="/contact"
            class="inline-flex items-center px-6 py-3 bg-white/10 hover:bg-white/20 text-white font-medium rounded-lg transition-colors border border-white/20"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Get Personalized Advice
          </a>
        </div>
        <p class="text-blue-200 text-sm mt-6">
          Join UK homeowners transforming their houses with smart technology
        </p>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center p-6">
        <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">
          {sortedCategories.filter(Boolean).length}+
        </div>
        <h3 class="font-semibold text-gray-800 dark:text-white mb-1">Expert Categories</h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          Comprehensive smart home topics covered
        </p>
      </div>
      <div class="text-center p-6">
        <div class="text-3xl font-bold text-emerald-600 dark:text-emerald-400 mb-2">
          UK Focus
        </div>
        <h3 class="font-semibold text-gray-800 dark:text-white mb-1">Local Solutions</h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          Tailored for UK homes and regulations
        </p>
      </div>
      <div class="text-center p-6">
        <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400 mb-2">
          Always Growing
        </div>
        <h3 class="font-semibold text-gray-800 dark:text-white mb-1">New Content</h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          Regularly updated with latest trends
        </p>
      </div>
    </div>
  </div>
</Base>